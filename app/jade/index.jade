//- -----------------------------------------------------------------|
//- INDEX
//- -----------------------------------------------------------------|
//- Contains all blocks/variables & HTML for the index page
//- This includes the page title, meta tags, and all content.

extends /layouts/default/_default

//- -----------------------------------------------------------------|
//- PAGE SPECIFIC VARIABLES
//- -----------------------------------------------------------------|
block variables

	//- PAGE META
	//- -----------------------------|
	- var pageTitle = 'PageTitle'
	- var pageName = 'pagename'
	- var pageDesc = 'PageDescription'
	- var pageUrl = siteUrl + '/' + pageName + '.html'
	- var pageImage = siteUrl + '/images/share/' + pageName + '.jpg'


//- -----------------------------------------------------------------|
//- CONTENT
//- -----------------------------------------------------------------|
block content
	main#content(role='main')
		p Let's get started!

		h4 Current Mixin Examples
		hr
		+hlpTimes(4)
			p Repeat this 4 times!
		+hlpYears('className')
		+hlpMonths('className')
		+hlpMonths('className', 'fr')
		+hlpDays('className')
		+hlpWeekdays('className')
		+hlpWeekdays('className', 'fr')
		+shareThis('facebook', true)
		+shareThis('twitter')
		+fbSharer(true)
		+fbSharer
		h1 Test
		h2 Test
		h3 Test
		h4 Test
		h5 Test
		h6 Test
		hr
