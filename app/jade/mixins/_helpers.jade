mixin hlpTimes(limit)
	- for (var i = 1; i <= limit; i++) {
		block
	- }


//- #B : FORMS: YEAR SELECT
//- ---------------------------------|
mixin hlpYears(className, lang)
	- lang = lang || 'en'
	- var getYear = new Date().getFullYear();
	- var yearReset = getYear;
	- var years = [];

	- for (var i = 0; i < 100; i++) {
		- getYear = getYear - i;
		- years.push(getYear);
		- getYear = yearReset;
	- }

	select(class='#{className} form-control')
		if lang === 'fr'
			option(value='') -- Choisir
		else
			option(value='') -- Select
		each year in years
			option(value='#{year}')= year


//- #C : FORMS: MONTH SELECT
//- ---------------------------------|
mixin hlpMonths(className, lang)
	- lang = lang || 'en'
	- var monthsEN = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
	- var monthsFR = ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'];

	select(class='#{className} form-control')
		if lang === 'fr'
			option(value='') -- Choisir
			each month in monthsFR
				option(value='#{month.toLowerCase()}')= month
		else
			option(value='') -- Select
			each month in monthsEN
				option(value='#{month.toLowerCase()}')= month


//- #D : FORMS: NUMBERED DAYS SELECT
//- ---------------------------------|
mixin hlpDays(className, lang)
	- lang = lang || 'en'

	select(class='#{className} form-control')
		if lang === 'fr'
			option(value='') -- Choisir
		else
			option(value='') -- Select
		- for (var i = 1; i < 32; i++) {
			option(value='#{i}')= i
		- }


//- #E : FORMS: DAYS OF THE WEEK SELECT
//- ---------------------------------|
mixin hlpWeekdays(className, lang)
	- lang = lang || 'en'
	- var daysEN = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
	- var daysFR = ['Dimanche', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi'];

	select(class='#{className} form-control')
		if lang === 'fr'
			option(value='') -- Choisir
			each day in daysFR
				option(value='#{day.toLowerCase()}')= day
		else
			option(value='') -- Select
			each day in daysEN
				option(value='#{day.toLowerCase()}')= day


//- #F : RESPONSIVE IMAGES (USING SRCSET)
//- ---------------------------------|
mixin hlpSrcset(imgName, imgAlt, imgExt, imgClass, imgPath, widthSm, widthMd, widthLg, widthLgst)
	- imgExt = imgExt || '.jpg'
	- imgPath = imgPath || 'images'
	- widthSm = widthSm || '320'
	- widthMd = widthMd || '640'
	- widthLg = widthLg || '1024'
	- widthLgst = widthLgst || '1800'
	- buildFb = imgPath + '/sm/' + imgName + imgExt
	- buildSm = imgPath + '/sm/' + imgName  + imgExt + ' ' + widthSm + 'w'
	- buildMd = imgPath + '/md/' + imgName + imgExt + ' ' + widthMd + 'w'
	- buildLg = imgPath + '/lg/' + imgName + imgExt + ' ' + widthLg + 'w'
	- buildLgst = imgPath + '/lgst/' + imgName + imgExt + ' ' + widthLgst + 'w'

	img(
		src='#{buildFb}'
		alt='#{imgAlt}'
		class='#{imgClass}'
		srcset='#{buildSm}, #{buildMd}, #{buildLg}, #{buildLgst}'
        )


//- #G : RESPONSIVE IMAGES (USING PICTURE)
//- ---------------------------------|
mixin hlpPicture(imgName, imgAlt, imgExt, imgClass, imgPath, widthSm, widthMd, widthLg, widthLgst)
	- imgExt = imgExt || '.jpg'
	- imgPath = imgPath || 'images'
	- widthSm = widthSm || '320'
	- widthMd = widthMd || '640'
	- widthLg = widthLg || '1024'
	- widthLgst = widthLgst || '1800'
	- buildFb = imgPath + '/sm/' + imgName + imgExt
	- buildSm = imgPath + '/sm/' + imgName + imgExt
	- buildMd = imgPath + '/md/' + imgName + imgExt
	- buildLg = imgPath + '/lg/' + imgName + imgExt
	- buildLgst = imgPath + '/lgst/' + imgName + imgExt

	picture
		<!--[if IE 9]><video style="display: none;"><![endif]-->
		source(srcset='#{buildLgst}' media='(min-width: #{widthLg}px)')
		source(srcset='#{buildLg}' media='(min-width: #{widthMd}px)')
		source(srcset='#{buildMd}' media='(min-width: #{widthSm}px)')
		<!--[if IE 9]></video><![endif]-->
		img(src='#{buildFb}' alt='#{imgAlt}' class='#{imgClass}')
