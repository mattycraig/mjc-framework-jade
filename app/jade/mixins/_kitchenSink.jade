			+shareThis('facebook', true)
		.col-sm-4
			label ShareThis (No Icon)
			+shareThis('twitter')
	.row
		.col-sm-4
			label FB Sharer (With Icon)
			+fbSharer(true)
		.col-sm-4
			label FB Sharer (No Icon)
			+fbSharer
		.col-sm-4
			label Responsive Image (srcset)
			+hlpSrcset('', 'test', 'Alt test', 'img-responsive')

			label Responsive Image (picture)
			+hlpPicture('sub/', 'sub-test', 'Alt test', 'img-responsive')
